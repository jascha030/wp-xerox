#!/usr/bin/env php
<?php
/**
 * Load the PSR-4 autoloader.
 * @throws RuntimeException when path is invalid
 */

use Symfony\Component\Console\Input\InputArgument;
use Symfony\Component\Console\Input\InputInterface;
use Symfony\Component\Console\SingleCommandApplication;

if (file_exists(__DIR__.'/../../../autoload.php')) {
    $autoloaderPath = __DIR__.'/../../../autoload.php';
} else {
    $autoloaderPath = __DIR__.'/../autoload.php';
}

if (! isset($autoloaderPath) || ! is_readable($autoloaderPath)) {
    throw new \RuntimeException(sprintf('Could not find file \'%s\'. It is generated by Composer. Use \'install --prefer-source\' or \'update --prefer-source\' Composer commands to move forward.',
            $autoloaderPath));
}

require $autoloaderPath;

$app = new Symfony\Component\Console\Application('WP Xerox', '1.0.0');
